package node;

import java.util.Arrays;

public class Controller {

	private byte[] buffer = new byte[1024];
	
	public void write(byte[] data, int position) {
		int length = Math.min( position + data.length, buffer.length );
		System.arraycopy(data, 0, buffer, position, length );
	}
	
	public byte[] read(int position, int length) {
		return Arrays.copyOfRange(buffer, position, position + length);
	}
	
}
